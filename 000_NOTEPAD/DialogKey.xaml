<Window x:Class="_000_NOTEPAD.DialogKey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_000_NOTEPAD"
        mc:Ignorable="d"
        Title="DialogKey" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="180">
            <TextBlock HorizontalAlignment="Left" Text="Enter encryption key:" VerticalAlignment="Top" Width="180"/>
            <TextBox x:Name="Key" x:FieldModifier="public" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        </StackPanel>
        <Grid Grid.Row="1" Width="180"
              Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Click="OkClicked" Grid.Column="0" Content="OK" HorizontalAlignment="Left" Width="75"/>
            <Button Click="CancelClicked" Grid.Column="1" Content="Cancel" HorizontalAlignment="Right" Width="75"/>
        </Grid>

    </Grid>
</Window>
